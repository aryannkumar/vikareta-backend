{
  "name": "vikareta-backend",
  "version": "1.0.0",
  "description": "Vikareta B2B Marketplace Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "prebuild": "rm -rf dist && prisma generate",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:backup": "pg_dump $DATABASE_URL > backup.sql",
    "cache:clear": "redis-cli FLUSHALL",
    "logs:tail": "tail -f logs/app.log",
    "health": "curl -f http://localhost:5001/health || exit 1",
    "deploy": "./build-and-deploy.sh",
    "deploy:prod": "NODE_ENV=production ./build-and-deploy.sh",
    "docker:build": "docker build -t vikareta-backend .",
    "docker:run": "docker run -p 5001:5001 vikareta-backend",
    "security:audit": "npm audit --audit-level=high",
    "docs:generate": "typedoc --out docs/ src/",
    "clean": "rm -rf dist/ node_modules/ coverage/ docs/",
    "setup": "npm install && prisma generate && prisma migrate dev",
    "verify": "npm run type-check && npm run lint && npm run test"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cashfree-pg": "^5.0.8",
    "compression": "^1.8.1",
    "compromise": "^14.14.4",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "jimp": "^0.22.12",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "natural": "^8.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "razorpay": "^2.9.6",
    "redis": "^5.7.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.18.2",
    "@types/express-validator": "^2.20.33",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.8",
    "@types/jimp": "^0.2.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-linkedin-oauth2": "^1.5.6",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.13.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "b2b",
    "marketplace",
    "api",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "Vikareta Team",
  "license": "MIT"
}
